{
  "apiVersion": "5.2.2.0",
  "swaggerVersion": "1.2",
  "basePath": "https://localhost:9000/pa-admin-api/v3",
  "resourcePath": "/users",
  "apis": [
    {
      "path": "/users",
      "operations": [
        {
          "method": "GET",
          "summary": "Get all Users",
          "notes": "",
          "type": "UsersView",
          "nickname": "getUsersCommand",
          "parameters": [
            {
              "name": "page",
              "description": "Page number to retrieve",
              "required": false,
              "allowMultiple": false,
              "type": "integer",
              "format": "int32",
              "paramType": "query"
            },
            {
              "name": "numberPerPage",
              "description": "Number of Users per page",
              "required": false,
              "allowMultiple": false,
              "type": "integer",
              "format": "int32",
              "paramType": "query"
            },
            {
              "name": "filter",
              "description": "Search for Users with username matching filter text",
              "required": false,
              "allowMultiple": false,
              "type": "string",
              "paramType": "query"
            },
            {
              "name": "username",
              "description": "Get Users by username",
              "required": false,
              "allowMultiple": false,
              "type": "string",
              "paramType": "query"
            },
            {
              "name": "sortKey",
              "description": "A comma separated list of User attributes (keys) to be used to sort the results",
              "required": false,
              "allowMultiple": false,
              "type": "string",
              "paramType": "query"
            },
            {
              "name": "order",
              "description": "Order of the sorted results (ASC for ascending, DESC for descending)",
              "required": false,
              "allowMultiple": false,
              "type": "string",
              "paramType": "query"
            }
          ]
        }
      ]
    },
    {
      "path": "/users/{id}",
      "operations": [
        {
          "method": "GET",
          "summary": "Get a User ",
          "notes": "",
          "type": "UserView",
          "nickname": "getUserCommand",
          "parameters": [
            {
              "name": "id",
              "description": "ID of User to get",
              "required": true,
              "allowMultiple": false,
              "type": "string",
              "paramType": "path"
            }
          ]
        },
        {
          "method": "PUT",
          "summary": "Update a User",
          "notes": "",
          "type": "UserView",
          "nickname": "updateUserCommand",
          "parameters": [
            {
              "name": "id",
              "description": "ID of User",
              "required": true,
              "allowMultiple": false,
              "type": "string",
              "paramType": "path"
            },
            {
              "name": "user",
              "description": "User to update",
              "required": true,
              "allowMultiple": false,
              "type": "UserView",
              "paramType": "body"
            }
          ]
        }
      ]
    },
    {
      "path": "/users/{id}/password",
      "operations": [
        {
          "method": "PUT",
          "summary": "Update a User's Password",
          "notes": "",
          "type": "UserPasswordView",
          "nickname": "updateUserPasswordCommand",
          "parameters": [
            {
              "name": "id",
              "description": "ID of User",
              "required": true,
              "allowMultiple": false,
              "type": "string",
              "paramType": "path"
            },
            {
              "name": "user",
              "description": "User password to update",
              "required": true,
              "allowMultiple": false,
              "type": "UserPasswordView",
              "paramType": "body"
            }
          ]
        }
      ]
    }
  ],
  "models": {
    "UsersView": {
      "id": "UsersView",
      "required": [
        "items"
      ],
      "properties": {
        "items": {
          "type": "array",
          "items": {
            "$ref": "UserView"
          }
        }
      }
    },
    "UserView": {
      "id": "UserView",
      "required": [
        "username"
      ],
      "properties": {
        "email": {
          "type": "string",
          "description": "(sortable) The Administrative account's email"
        },
        "firstLogin": {
          "type": "boolean",
          "description": "(sortable) The Administrative account's first login indicator"
        },
        "showTutorial": {
          "type": "boolean",
          "description": "(sortable) The Administrative account's show tutorial indicator"
        },
        "slaAccepted": {
          "type": "boolean",
          "description": "(sortable) The Administrative account's sla acceptance indicator"
        },
        "username": {
          "type": "string",
          "description": "(sortable) The Administrative users's username"
        }
      }
    },
    "UserPasswordView": {
      "id": "UserPasswordView",
      "required": [
        "currentPassword",
        "newPassword"
      ],
      "properties": {
        "currentPassword": {
          "type": "string"
        },
        "newPassword": {
          "type": "string"
        }
      }
    }
  }
}
